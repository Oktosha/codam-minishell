{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Pretty gdb",
			"request": "launch",
			"type": "cppdbg",
			"program": "${workspaceFolder}/test/ps_tests/ps_tests",
			"cwd": "${workspaceFolder}",
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"setupCommands": [
				{
				  "description": "Enable pretty-printing for gdb",
				  "text": "-enable-pretty-printing",
				  "ignoreFailures": false
				},
				{
					"description": "Load Kotishell printers",
					"text": "source ${workspaceFolder}/debug/gdb/pretty.py",
					"ignoreFailures": false
				}
			  ]
		}
	]
}
